{
    "version": 2,
    "builds": [
        
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],
    "routes": [
        {
            "src": "/(login|register|profile|protected",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}
